import os

def build(bld):
    cython_sources = [
        'point2d.pyx',
        'polygon2d.pyx',
        'triangle2d.pyx',
    ]

    for src in cython_sources:
        bld(
            features = 'c cshlib pyext',
            source   = src,
            target   = os.path.splitext(src)[0]
        )
