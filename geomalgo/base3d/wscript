import os

def build(bld):
    cython_sources = [
        'point3d.pyx',
        'segment3d.pyx',
        'triangle3d.pyx',
        'vector3d.pyx',
    ]

    for src in cython_sources:
        bld(
            features = 'c cshlib pyext',
            source   = src,
            target   = os.path.splitext(src)[0]
        )
